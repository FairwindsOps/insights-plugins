project_name: insights-ci
release:
  disable: true
changelog:
  skip: true
# This avoids creating .tar.gz archives.
archives:
- format: binary
env:
  - CGO_ENABLED=0
  - GO11MODULE=on
builds:
- main: ./cmd/insights-ci/main.go
  # goreleaser builds a matrix of the GOOS, GOArch, and GOARM listed below,
  # minus those under `ignore`.
  goarch:
  - amd64
  - arm64
  goos:
  - linux
dockers:
  # There are multiple images to match the `--platform` docker build flag with
  # combinations of `GOOS`, `GOARCH`, and `GOARM`
- image_templates:
  - "ivanfetch/plugin-ci:{{ .FullCommit }}-amd64"
  use: buildx
  build_flag_templates:
  - "--platform=linux/amd64"
- image_templates:
  - "ivanfetch/plugin-ci:{{ .FullCommit }}-arm64"
  use: buildx
  goarch: arm64
  goos: linux
  build_flag_templates:
  - "--platform=linux/arm64"
docker_manifests:
# Create DOcker manifests that make multiple architectures available within a tag,
# and provide partial-version tags like 2, and 2.2.
- name_template: ivanfetch/plugin-ci:{{ .FullCommit }}
  image_templates:
  - "ivanfetch/plugin-ci:{{ .FullCommit }}-amd64"
  - "ivanfetch/plugin-ci:{{ .FullCommit }}-arm64"
- name_template: ivanfetch/plugin-ci:latest
  # This is replaced using `envsubst`, depending on the git branch.
  skip_push: ${skip_main_docker_tags}
  image_templates:
  - "ivanfetch/plugin-ci:{{ .FullCommit }}-amd64"
  - "ivanfetch/plugin-ci:{{ .FullCommit }}-arm64"
- name_template: ivanfetch/plugin-ci:{{ .Tag }}
  # This is replaced using `envsubst`, depending on the git branch.
  skip_push: ${skip_main_docker_tags}
  image_templates:
  - "ivanfetch/plugin-ci:{{ .FullCommit }}-amd64"
  - "ivanfetch/plugin-ci:{{ .FullCommit }}-arm64"
- name_template: ivanfetch/plugin-ci:{{ .Major }}
  # This is replaced using `envsubst`, depending on the git branch.
  skip_push: ${skip_main_docker_tags}
  image_templates:
  - "ivanfetch/plugin-ci:{{ .FullCommit }}-amd64"
  - "ivanfetch/plugin-ci:{{ .FullCommit }}-arm64"
- name_template: ivanfetch/plugin-ci:{{ .Major }}.{{ .Minor }}
  # This is replaced using `envsubst`, depending on the git branch.
  skip_push: ${skip_main_docker_tags}
  image_templates:
  - "ivanfetch/plugin-ci:{{ .FullCommit }}-amd64"
  - "ivanfetch/plugin-ci:{{ .FullCommit }}-arm64"
