{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Insights",
  "definitions": {
      "Insights": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
              "images": {
                  "$ref": "#/definitions/Images"
              },
              "manifests": {
                  "$ref": "#/definitions/Manifests"
              },
              "options": {
                  "$ref": "#/definitions/Options"
              },
              "reports": {
                  "$ref": "#/definitions/Reports"
              }
          },
          "required": [
              "images",
              "manifests",
              "options",
              "reports"
          ],
          "title": "Insights"
      },
      "Images": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
              "folder": {
                  "type": "string"
              },
              "docker": {
                  "type": "array",
                  "items": {
                      "type": "string"
                  }
              }
          },
          "required": [
              "docker",
              "folder"
          ],
          "title": "Images"
      },
      "Manifests": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
              "yaml": {
                  "type": "array",
                  "items": {
                      "type": "string"
                  }
              },
              "helm": {
                  "type": "array",
                  "items": {
                      "$ref": "#/definitions/Helm"
                  }
              }
          },
          "required": [
              "helm",
              "yaml"
          ],
          "title": "Manifests"
      },
      "Helm": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
              "name": {
                  "type": "string"
              },
              "path": {
                  "type": "string"
              },
              "repo": {
                  "type": "string"
              },
              "chart": {
                  "type": "string"
              },
              "fluxFile": {
                  "type": "string"
              },
              "version": {
                  "type": "string"
              },
              "valuesFile": {
                  "type": "string"
              },
              "values": {
                  "$ref": "#/definitions/Values"
              }
          },
          "required": [
              "chart",
              "fluxFile",
              "name",
              "path",
              "repo",
              "values",
              "valuesFile",
              "version"
          ],
          "title": "Helm"
      },
      "Values": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
              "key": {
                  "type": "string"
              }
          },
          "required": [
              "key"
          ],
          "title": "Values"
      },
      "Options": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
              "setExitCode": {
                  "type": "boolean"
              },
              "baseBranch": {
                  "type": "string"
              },
              "newActionItemThreshold": {
                  "type": "integer"
              },
              "severityThreshold": {
                  "type": "string"
              },
              "tempFolder": {
                  "type": "string"
              },
              "hostname": {
                  "type": "string"
              },
              "organization": {
                  "type": "string"
              },
              "junitOutput": {
                  "type": "string"
              },
              "repositoryName": {
                  "type": "string"
              }
          },
          "required": [
              "baseBranch",
              "hostname",
              "junitOutput",
              "newActionItemThreshold",
              "organization",
              "repositoryName",
              "setExitCode",
              "severityThreshold",
              "tempFolder"
          ],
          "title": "Options"
      },
      "Reports": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
              "polaris": {
                  "$ref": "#/definitions/Opa"
              },
              "pluto": {
                  "$ref": "#/definitions/Opa"
              },
              "trivy": {
                  "$ref": "#/definitions/Trivy"
              },
              "opa": {
                  "$ref": "#/definitions/Opa"
              }
          },
          "required": [
              "opa",
              "pluto",
              "polaris",
              "trivy"
          ],
          "title": "Reports"
      },
      "Opa": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
              "enabled": {
                  "type": "boolean"
              }
          },
          "required": [
              "enabled"
          ],
          "title": "Opa"
      },
      "Trivy": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
              "enabled": {
                  "type": "boolean"
              },
              "skipManifests": {
                  "type": "boolean"
              }
          },
          "required": [
              "enabled",
              "skipManifests"
          ],
          "title": "Trivy"
      }
  }
}
